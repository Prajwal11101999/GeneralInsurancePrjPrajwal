@model WebApplication3.Models.RegistrationInfo
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<div class="row">
    <div class="col-md-3 col-md-offset-3">
        <div>
            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {
                <table height="200" width="500">
                    @*<tr>
                        <th>LOGIN</th>
                    </tr>*@
                    <tr>
                        <td>@Html.LabelFor(model => model.Registration_EmailAddress)</td>
                        <td>
                            @Html.TextBoxFor(model => model.Registration_EmailAddress, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Registration_EmailAddress, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(model => model.Registration_Password)</td>
                        <td>
                            @Html.EditorFor(model => model.Registration_Password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Registration_Password, "", new { @class = "text-danger" })
                            @ViewBag.ErrorMessage
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <input type="submit" value="Login" class="btn btn-info" />
                            <a href="/Home/Reset" class="btn btn-info">Reset</a>
                            <a href="/Home/RegistrationDetails" class="btn btn-danger">New User</a>
                        </td>
                    </tr>
                </table>
             }
        </div>
    </div>
</div>